@using OBRS.Models
@model Prices

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Add Price</h4>
                        </div>
                        <form asp-controller="Admin" asp-action="AddPrices" method="post">
                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="Bus_id">BusNumber & Route</label>
                                    <select asp-for="Bus_id" class="form-control" asp-items="ViewBag.Pricebuses" required>
                                        <option value="">-- Select Bus & Route --</option>
                                    </select>
                                    <span asp-validation-for="Bus_id" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="BaseFare"></label>
                                    <input type="number" step="0.01" class="form-control calc" asp-for="BaseFare" placeholder="Enter Base Fare" required>
                                    <span asp-validation-for="BaseFare" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="AdditionalCharges"></label>
                                    <input type="number" step="0.01" class="form-control calc" asp-for="AdditionalCharges" placeholder="Enter Additional Charges (if any)">
                                    <span asp-validation-for="AdditionalCharges" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Discount"></label>
                                    <input type="number" step="0.01" class="form-control calc" asp-for="Discount" placeholder="Enter Discount (if any)">
                                    <span asp-validation-for="Discount" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="FinalFare"></label>
                                    <input type="number" step="0.01" class="form-control" asp-for="FinalFare" placeholder="Auto Calculated" readonly>
                                    <span asp-validation-for="FinalFare" class="text-danger"></span>
                                </div>

                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive">Active</label>
                                </div>
                            </div>

                            <div class="card-footer">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        function calculateFinalFare() {
            let baseFare = parseFloat(document.getElementById("BaseFare").value) || 0;
            let additional = parseFloat(document.getElementById("AdditionalCharges").value) || 0;
            let discount = parseFloat(document.getElementById("Discount").value) || 0;

            let finalFare = (baseFare + additional - discount).toFixed(2);
            document.getElementById("FinalFare").value = finalFare;
        }

        // Attach event listeners
        document.querySelectorAll(".calc").forEach(input => {
            input.addEventListener("input", calculateFinalFare);
        });
    </script>
}
