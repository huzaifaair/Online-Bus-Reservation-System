@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 
     

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="row">
            <!-- Total Buses -->
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="card-statistic-4">
                        <div class="align-items-center justify-content-between">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                    <div class="card-content">
                                        <h5 class="font-15">Total Buses</h5>
                                        <h2 class="mb-3 font-18">@ViewBag.BusesCount</h2>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                    <div class="banner-img">
                                        <img src="~/assets/img/banner/1.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Routes -->
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="card-statistic-4">
                        <div class="align-items-center justify-content-between">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                    <div class="card-content">
                                        <h5 class="font-15">Total Routes</h5>
                                        <h2 class="mb-3 font-18">@ViewBag.RoutesCount</h2>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                    <div class="banner-img">
                                        <img src="~/assets/img/banner/2.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Employees -->
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="card-statistic-4">
                        <div class="align-items-center justify-content-between">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                    <div class="card-content">
                                        <h5 class="font-15">Total Employees</h5>
                                        <h2 class="mb-3 font-18">@ViewBag.EmployeesCount</h2>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                    <div class="banner-img">
                                        <img src="~/assets/img/banner/3.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Bookings & Revenue -->
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="card-statistic-4">
                        <div class="align-items-center justify-content-between">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                    <div class="card-content">
                                        <h5 class="font-15">Total Bookings</h5>
                                        <h2 class="mb-3 font-18">@ViewBag.BookingsCount</h2>
                                        <p class="mb-0">Revenue: <b>@ViewBag.Revenue.ToString("C")</b></p>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                    <div class="banner-img">
                                        <img src="~/assets/img/banner/4.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 col-lg-12">
                <div class="card ">
                    <div class="card-header">
                        <h4>System Overview</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Chart Area -->
                            <div class="col-lg-9">
                                <div id="chart1"></div>
                                <div class="row mb-0">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="list-inline text-center">
                                            <div class="list-inline-item p-r-30">
                                                <i data-feather="bus" class="col-green"></i>
                                                <h5 class="m-b-0">@ViewBag.BusesCount</h5>
                                                <p class="text-muted font-14 m-b-0">Total Buses</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="list-inline text-center">
                                            <div class="list-inline-item p-r-30">
                                                <i data-feather="map" class="col-orange"></i>
                                                <h5 class="m-b-0">@ViewBag.RoutesCount</h5>
                                                <p class="text-muted font-14 m-b-0">Total Routes</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="list-inline text-center">
                                            <div class="list-inline-item p-r-30">
                                                <i data-feather="users" class="col-green"></i>
                                                <h5 class="mb-0 m-b-0">@ViewBag.EmployeesCount</h5>
                                                <p class="text-muted font-14 m-b-0">Employees</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Stats on the right -->
                            <div class="col-lg-3">
                                <div class="row mt-5">
                                    <div class="col-7 col-xl-7 mb-3">Bookings</div>
                                    <div class="col-5 col-xl-5 mb-3">
                                        <span class="text-big">@ViewBag.BookingsCount</span>
                                    </div>

                                    <div class="col-7 col-xl-7 mb-3">Revenue</div>
                                    <div class="col-5 col-xl-5 mb-3">
                                        <span class="text-big">@ViewBag.Revenue.ToString("C")</span>
                                    </div>

                                    <div class="col-7 col-xl-7 mb-3">Upcoming Trips</div>
                                    <div class="col-5 col-xl-5 mb-3">
                                        <span class="text-big">@((ViewBag.UpcomingTrips as List<dynamic>)?.Count ?? 0)</span>
                                    </div>

                                    <div class="col-7 col-xl-7 mb-3">Active Routes</div>
                                    <div class="col-5 col-xl-5 mb-3">
                                        <span class="text-big">@ViewBag.RoutesCount</span>
                                    </div>

                                    <div class="col-7 col-xl-7 mb-3">Fleet Utilization</div>
                                    <div class="col-5 col-xl-5 mb-3">
                                        <span class="text-big">
                                            @{
                                                var utilization = ViewBag.BusesCount > 0
                                                ? Math.Round(((decimal)ViewBag.BookingsCount / (decimal)ViewBag.BusesCount), 2)
                                                : 0;
                                            }
                                            @utilization
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Upcoming Departures</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Bus Number</th>
                                        <th>Route</th>
                                        <th>Departure Time</th>
                                        <th>Arrival Time</th>
                                        <th>Available Seats</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var count = 1;
                                        foreach (var trip in ViewBag.UpcomingTrips)
                                        {
                                            <tr>
                                                <td>@count</td>
                                                <td>@trip.BusNumber</td>
                                                <td>@trip.RouteName</td>
                                                <td>@trip.DepartureTime.ToString("dd-MMM-yyyy HH:mm")</td>
                                                <td>@trip.ArrivalTime.ToString("dd-MMM-yyyy HH:mm")</td>
                                                <td>@trip.AvailableSeats</td>
                                            </tr>
                                            ;
                                            count++;
                                        }
                                    }
                                    @if ((ViewBag.UpcomingTrips as List<dynamic>)?.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted">No upcoming departures</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <div class="settingSidebar">
        <a href="javascript:void(0)" class="settingPanelToggle">
            <i class="fa fa-spin fa-cog"></i>
        </a>
        <div class="settingSidebar-body ps-container ps-theme-default">
            <div class=" fade show active">
                <div class="setting-panel-header">
                    Setting Panel
                </div>
                <div class="p-15 border-bottom">
                    <h6 class="font-medium m-b-10">Select Layout</h6>
                    <div class="selectgroup layout-color w-50">
                        <label class="selectgroup-item">
                            <input type="radio" name="value" value="1" class="selectgroup-input-radio select-layout" checked>
                            <span class="selectgroup-button">Light</span>
                        </label>
                        <label class="selectgroup-item">
                            <input type="radio" name="value" value="2" class="selectgroup-input-radio select-layout">
                            <span class="selectgroup-button">Dark</span>
                        </label>
                    </div>
                </div>
                <div class="p-15 border-bottom">
                    <h6 class="font-medium m-b-10">Sidebar Color</h6>
                    <div class="selectgroup selectgroup-pills sidebar-color">
                        <label class="selectgroup-item">
                            <input type="radio" name="icon-input" value="1" class="selectgroup-input select-sidebar">
                            <span class="selectgroup-button selectgroup-button-icon" data-toggle="tooltip"
                                  data-original-title="Light Sidebar"><i class="fas fa-sun"></i></span>
                        </label>
                        <label class="selectgroup-item">
                            <input type="radio" name="icon-input" value="2" class="selectgroup-input select-sidebar" checked>
                            <span class="selectgroup-button selectgroup-button-icon" data-toggle="tooltip"
                                  data-original-title="Dark Sidebar"><i class="fas fa-moon"></i></span>
                        </label>
                    </div>
                </div>
                <div class="p-15 border-bottom">
                    <h6 class="font-medium m-b-10">Color Theme</h6>
                    <div class="theme-setting-options">
                        <ul class="choose-theme list-unstyled mb-0">
                            <li title="white" class="active">
                                <div class="white"></div>
                            </li>
                            <li title="cyan">
                                <div class="cyan"></div>
                            </li>
                            <li title="black">
                                <div class="black"></div>
                            </li>
                            <li title="purple">
                                <div class="purple"></div>
                            </li>
                            <li title="orange">
                                <div class="orange"></div>
                            </li>
                            <li title="green">
                                <div class="green"></div>
                            </li>
                            <li title="red">
                                <div class="red"></div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="p-15 border-bottom">
                    <div class="theme-setting-options">
                        <label class="m-b-0">
                            <input type="checkbox" name="custom-switch-checkbox" class="custom-switch-input"
                                   id="mini_sidebar_setting">
                            <span class="custom-switch-indicator"></span>
                            <span class="control-label p-l-10">Mini Sidebar</span>
                        </label>
                    </div>
                </div>
                <div class="p-15 border-bottom">
                    <div class="theme-setting-options">
                        <label class="m-b-0">
                            <input type="checkbox" name="custom-switch-checkbox" class="custom-switch-input"
                                   id="sticky_header_setting">
                            <span class="custom-switch-indicator"></span>
                            <span class="control-label p-l-10">Sticky Header</span>
                        </label>
                    </div>
                </div>
                <div class="mt-4 mb-4 p-3 align-center rt-sidebar-last-ele">
                    <a href="#" class="btn btn-icon icon-left btn-primary btn-restore-theme">
                        <i class="fas fa-undo"></i> Restore Default
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>