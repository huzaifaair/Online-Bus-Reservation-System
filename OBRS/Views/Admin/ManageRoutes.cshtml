@using OBRS.Models
@model List<Routes>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-body">
            @{
                if (TempData["success"] != null)
                {
                    <div class="alert alert-success" id="success" role="alert">@TempData["success"]</div>
                }
                if (TempData["danger"] != null)
                {
                    <div class="alert alert-danger" id="danger" role="alert">@TempData["danger"]</div>
                }
                if (TempData["update"] != null)
                {
                    <div class="alert alert-success" id="update" role="alert">@TempData["update"]</div>
                }
            }
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Routes</h4>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-lg">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Route Name</th>
                                            <th>Start Location</th>
                                            <th>Destination</th>
                                            <th>Distance (Km)</th>
                                            <th>Duration</th>
                                            <th>Status</th>
                                            <th>Action1</th>
                                            <th>Action2</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var count = 1;
                                            foreach (var route in Model)
                                            {
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@route.RouteName</td>
                                                    <td>@route.StartLocation</td>
                                                    <td>@route.Destination</td>
                                                    <td>@route.DistanceInKm</td>
                                                    <td>@route.EstimatedDuration</td>
                                                    <td>
                                                        @if (route.IsActive)
                                                        {
                                                            <div class="badge badge-success">Active</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="badge badge-danger">Inactive</div>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Admin" asp-action="UpdateRoutes" asp-route-id="@route.RouteId" class="btn btn-primary btn-sm">
                                                            Update
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Admin" asp-action="DeleteRoutes" asp-route-id="@route.RouteId"
                                                           class="btn btn-primary btn-sm"
                                                           onclick="return confirm('🛑 Are you sure you want to delete this route?');">
                                                            Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <a asp-controller="Admin" asp-action="AddRoutes" class="btn btn-success">+ Add Routes</a>
                        </div>
                        <div class="card-footer text-right">
                            <nav class="d-inline-block">
                                <ul class="pagination mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">
                                            1 <span class="sr-only">(current)</span>
                                        </a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    let success = document.getElementById("success");
    if(success) {
        setTimeout(() => { success.style.display = "none"; }, 4500);
    }

    let danger = document.getElementById("danger");
    if(danger) {
        setTimeout(() => { danger.style.display = "none"; }, 4500);
    }

    let update = document.getElementById("update");
    if(update) {
        setTimeout(() => { update.style.display = "none"; }, 4500);
    }
</script>
