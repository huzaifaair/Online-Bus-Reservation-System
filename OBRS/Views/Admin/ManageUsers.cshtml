@model List<OBRS.Areas.Identity.Data.OBRSUser>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-body">
            @{

                if (TempData["danger"] != null)
                {
                    <div class="alert alert-danger" id="danger" role="alert">@TempData["danger"]</div>
                }
                if (TempData["success"] != null)
                {
                    <div class="alert alert-success" id="success" role="alert">@TempData["success"]</div>
                }
                if (TempData["warning"] != null)
                {
                    <div class="alert alert-warning" id="warning" role="alert">@TempData["warning"]</div>
                }
            }
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Manage Users</h4>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-lg">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Full Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Created At</th>
                                            <th>Status</th>
                                            <th>Toggle</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var count = 1;
                                            foreach (var user in Model)
                                            {
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@user.FullName</td>
                                                    <td>@user.PhoneNumber</td>
                                                    <td>@user.Email</td>
                                                    <td>
                                                        @{
                                                            var role = ViewBag.UserRoles[user.Id] as string;
                                                        }

                                                        @if (role == "admin")
                                                        {
                                                            <span class="badge badge-primary">Admin</span>
                                                        }
                                                        else if (role == "user")
                                                        {
                                                            <span class="badge badge-success">User</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-secondary">N/A</span>
                                                        }
                                                    </td>
                                                    <td>@user.CreatedAt.ToString("dd-MMM-yyyy")</td>

                                                    <!-- Status -->
                                                    <td>
                                                        <span class="badge @(user.IsActive ? "badge-success" : "badge-danger")">
                                                            @(user.IsActive ? "Active" : "Inactive")
                                                        </span>
                                                    </td>

                                                    <!-- Toggle -->
                                                    <td>
                                                        <form asp-controller="Admin" asp-action="ToggleUser" method="post" style="display:inline;">
                                                            <input type="hidden" name="id" value="@user.Id" />
                                                            <label class="switch">
                                                                <!-- Agar user active hai to toggle OFF -->
                                                                <!-- Agar user inactive hai to toggle ON -->
                                                                <input type="checkbox" onchange="this.form.submit()" @(user.IsActive ? "" : "checked") />
                                                                <span class="slider round"></span>
                                                            </label>
                                                        </form>
                                                    </td>

                                                    <!-- Delete Action -->
                                                    <td>
                                                        <a asp-controller="Admin" asp-action="DeleteUsers" asp-route-id="@user.Id"
                                                           class="btn btn-primary btn-sm @(user.IsActive ? "disabled" : "")"
                                                           onclick="return confirm('🛑 Are you sure you want to delete this user?');">
                                                            Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>


                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <nav class="d-inline-block">
                                <ul class="pagination mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">
                                            1 <span class="sr-only">(current)</span>
                                        </a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    let danger = document.getElementById("danger");
    if(danger) {
        setTimeout(() => { danger.style.display = "none"; }, 4500);
    }

    let success = document.getElementById("success");
    if(success) {
        setTimeout(() => { success.style.display = "none"; }, 4500);
    }

    let warning = document.getElementById("warning");
    if(warning) {
        setTimeout(() => { warning.style.display = "none"; }, 4500);
    }

</script>

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #28a745; /* green when active */
        transition: .4s;
        border-radius: 24px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 4px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #dc3545; /* red when inactive */
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

</style>