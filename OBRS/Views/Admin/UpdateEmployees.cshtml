@using OBRS.Models
@model Employee

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Update Employee</h4>
                        </div>
                        <form asp-controller="Admin" asp-action="UpdateEmployees" method="post" enctype="multipart/form-data">
                            <div class="card-body">
                                <input type="hidden" asp-for="EmployeeId" />
                                <div class="form-group">
                                    <label asp-for="FullName"></label>
                                    <input type="text" class="form-control" asp-for="FullName" placeholder="Enter Full Name" required>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Bus_id">BusNumber</label>
                                    <select asp-for="Bus_id" class="form-control" asp-items="ViewBag.Empbuses" required>
                                        <option value="">-- Select Bus --</option>
                                    </select>
                                    <span asp-validation-for="Bus_id" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CNIC"></label>
                                    <input type="text" class="form-control" asp-for="CNIC" placeholder="Enter CNIC" required>
                                    <span asp-validation-for="CNIC" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="EmployeeImage"></label>
                                    <input type="file" class="form-control" asp-for="EmployeeImage" required>
                                    <span asp-validation-for="EmployeeImage" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter Phone Number" required>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Address"></label>
                                    <textarea class="form-control" asp-for="Address" placeholder="Enter Address"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Role"></label>
                                    <select asp-for="Role" class="form-control" id="roleDropdown" required>
                                        <option value="">-- Select Role --</option>
                                        <option value="Driver">Driver</option>
                                        <option value="Conductor">Conductor</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>

                                <div class="form-group" id="licenseField" style="display:none;">
                                    <label asp-for="LicenseNumber"></label>
                                    <input type="text" class="form-control" asp-for="LicenseNumber" id="licenseInput"
                                           placeholder="Enter License Number (only for Drivers)">
                                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="HireDate"></label>
                                    <input type="date" class="form-control" asp-for="HireDate" required>
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>

                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive">Active</label>
                                </div>

                            </div>

                            <div class="card-footer">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const roleDropdown = document.getElementById("roleDropdown");
        const licenseField = document.getElementById("licenseField");
        const licenseInput = document.getElementById("licenseInput");

        function toggleLicenseField() {
            if (roleDropdown.value === "Driver") {
                licenseField.style.display = "block";
                licenseInput.required = true; // make it required if Driver
            } else {
                licenseField.style.display = "none";
                licenseInput.required = false; // remove required if Conductor
                licenseInput.value = ""; // clear value when hidden
            }
        }

        // Run once on page load
        toggleLicenseField();

        // Run whenever dropdown changes
        roleDropdown.addEventListener("change", toggleLicenseField);
    });
</script>