@using OBRS.Models
@model Routes

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Add Route</h4>
                        </div>
                        <form asp-controller="Admin" asp-action="UpdateRoutes" method="post">
                            <div class="card-body">
                                <input type="hidden" asp-for="RouteId" />

                                <div class="form-group">
                                    <label asp-for="RouteName"></label>
                                    <input type="text" class="form-control" asp-for="RouteName" placeholder="Enter Route Name (e.g. Lahore to Islamabad)" required>
                                    <span asp-validation-for="RouteName" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="StartLocation"></label>
                                    <input type="text" class="form-control" asp-for="StartLocation" placeholder="Enter Start Location" required>
                                    <span asp-validation-for="StartLocation" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Destination"></label>
                                    <input type="text" class="form-control" asp-for="Destination" placeholder="Enter Destination" required>
                                    <span asp-validation-for="Destination" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="DistanceInKm"></label>
                                    <input type="number" class="form-control" asp-for="DistanceInKm" placeholder="Enter Distance in Km" required>
                                    <span asp-validation-for="DistanceInKm" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="EstimatedDuration"></label>
                                    <input type="time" class="form-control" asp-for="EstimatedDuration" required>
                                    <span asp-validation-for="EstimatedDuration" class="text-danger"></span>
                                </div>

                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive">Active</label>
                                </div>
                            </div>

                            <div class="card-footer">
                                <input type="submit" class="btn btn-primary" value="Update" />
                                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
