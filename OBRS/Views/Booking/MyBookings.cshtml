@model IEnumerable<OBRS.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold text-primary">
                        <i class="bi bi-ticket-perforated-fill"></i> My Bookings
                    </h2>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle-fill"></i> You have no bookings yet.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle shadow-sm">
                                <thead class="table-primary text-center">
                                    <tr>
                                        <th> Bus</th>
                                        <th> Route</th>
                                        <th> Seat</th>
                                        <th> Fare</th>
                                        <th> Travel Date</th>
                                        <th> Booking Date</th>
                                        <th> Status</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    @foreach (var booking in Model)
                                    {
                                        <tr>
                                            <td>@booking.bus.BusNumber</td>
                                            <td>@booking.bus.routes.RouteName</td>
                                            <td>@booking.SeatNumber</td>
                                            <td>
                                                <span class="fw-bold text-success">
                                                    Rs. @((booking.bus.PricePerSeat + (booking.bus.price?.FinalFare ?? 0)).ToString("N2"))
                                                </span>
                                            </td>
                                            <td>@booking.TravelDate.ToString("dd MMM yyyy")</td>
                                            <td>@booking.BookingDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                @if (booking.Status == "Booked")
                                                {
                                                    <span class="badge bg-success px-3 py-2">Booked</span>
                                                }
                                                else if (booking.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger px-3 py-2">Cancelled</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary px-3 py-2">Completed</span>
                                                }
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
