@model List<Buses>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Carousel Start -->
<div class="header-carousel">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active" aria-current="true" aria-label="First slide"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1" aria-label="Second slide"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!-- First Slide -->
            <div class="carousel-item active">
                <img src="~/auth/img/bus13.jpg" class="img-fluid w-100" alt="Bus Reservation" />
                <div class="carousel-caption">
                    <div class="container py-4">
                        <div class="row g-5">
                            <!-- Promo Text -->
                            <div class="col-lg-6 d-none d-lg-flex fadeInRight animated" data-animation="fadeInRight" style="animation-delay: 1s;">
                                <div class="text-start">
                                    <h1 class="display-5 text-white">Travel Anywhere with OBRS</h1>
                                    <p>
                                        Experience a smarter way to travel with <b>OBRS</b> – your trusted online bus
                                        reservation system. Whether it’s a quick city trip or a long-distance journey,
                                        we make your travel <span class="text-warning">fast</span>,
                                        <span class="text-warning">easy</span>, and
                                        <span class="text-warning">secure</span>.
                                    </p>
                                    <p>
                                        Browse buses, compare fares, and book your tickets online without any hassle.
                                        From affordable <b>Non-AC buses</b> to comfortable <b>AC coaches</b> and
                                        luxurious <b>Sleeper buses</b>, we’ve got it all covered.
                                    </p>
                                    <p class="fw-bold mt-3">
                                        <a asp-controller="Home" asp-action="SearchBuses"
                                           class="btn btn-primary btn-lg rounded-pill px-4 py-2">
                                            View Available Buses
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Second Slide -->
            <div class="carousel-item">
                <img src="~/auth/img/bus10.jpg" class="img-fluid w-100" alt="Bus Booking" />
                <div class="carousel-caption">
                    <div class="container py-4">
                        <div class="row g-5">
                            <!-- Promo -->
                            <div class="col-lg-6 d-none d-lg-flex fadeInRight animated" data-animation="fadeInRight" style="animation-delay: 1s;">
                                <div class="text-start">
                                    <h1 class="display-5 text-white">Best Deals on Bus Tickets</h1>
                                    <p class="lead text-white-50">
                                        Enjoy affordable fares, secure payments, and hassle-free booking.
                                        Travel with comfort and safety to your favorite destinations – anytime, anywhere.
                                    </p>
                                    <a asp-controller="Home" asp-action="SearchBuses"
                                       class="btn btn-primary btn-lg rounded-pill px-4 mt-3">
                                        View Available Buses
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Features Start -->
<div class="container-fluid feature py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Our <span class="text-primary">Key Features</span></h1>
            <p class="mb-0">We aim to make your travel easier, faster, and more reliable with our smart Online Bus Reservation System.</p>
        </div>
        <div class="row g-4 align-items-center">
            <div class="col-xl-4">
                <div class="row gy-4 gx-0">
                    <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <span class="fa fa-bus fa-2x"></span>
                            </div>
                            <div class="ms-4">
                                <h5 class="mb-3">Easy Bus Booking</h5>
                                <p class="mb-0">Quick and hassle-free online booking with instant confirmation.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <span class="fa fa-clock fa-2x"></span>
                            </div>
                            <div class="ms-4">
                                <h5 class="mb-3">Real-Time Schedules</h5>
                                <p class="mb-0">Check live bus timings and availability before booking your seat.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Center Image -->
            <div class="col-lg-12 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                <img src="~/auth/img/bus5.jpg" class="img-fluid w-100" style="object-fit: cover;" alt="Bus Booking Features">
            </div>

            <div class="col-xl-4">
                <div class="row gy-4 gx-0">
                    <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="feature-item justify-content-end">
                            <div class="text-end me-4">
                                <h5 class="mb-3">Secure Payments</h5>
                                <p class="mb-0">Pay online with complete safety and multiple payment options.</p>
                            </div>
                            <div class="feature-icon">
                                <span class="fa fa-credit-card fa-2x"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="feature-item justify-content-end">
                            <div class="text-end me-4">
                                <h5 class="mb-3">Booking History</h5>
                                <p class="mb-0">Track and manage all your past and upcoming reservations easily.</p>
                            </div>
                            <div class="feature-icon">
                                <span class="fa fa-history fa-2x"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Features End -->
<!-- Fact Counter -->
<div class="container-fluid counter bg-secondary py-5">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Happy Clients -->
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.1s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">1200</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Registered Users</h4>
                </div>
            </div>

            <!-- Total Buses -->
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.3s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-bus-alt fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">85</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Available Buses</h4>
                </div>
            </div>

            <!-- Routes Covered -->
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.5s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-route fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">230</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Routes Covered</h4>
                </div>
            </div>

            <!-- Tickets Booked -->
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.7s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-ticket-alt fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">15,000</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Tickets Booked</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fact Counter -->
<!-- Services Start -->
<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Our <span class="text-primary">Services</span></h1>
            <p class="mb-0">
                We provide a fast, reliable, and convenient way to book bus tickets online.
                Whether you’re traveling for work, study, or leisure, our system ensures a smooth reservation process with transparent pricing and comfortable rides.
            </p>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="fa fa-laptop fa-2x"></i>
                    </div>
                    <h5 class="mb-3">Online Booking</h5>
                    <p class="mb-0">Easily reserve your seat online anytime without standing in long queues.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="fa fa-money-bill-alt fa-2x"></i>
                    </div>
                    <h5 class="mb-3">Affordable Fares</h5>
                    <p class="mb-0">We offer competitive and transparent pricing for all routes with no hidden charges.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="fa fa-bus fa-2x"></i>
                    </div>
                    <h5 class="mb-3">Wide Network</h5>
                    <p class="mb-0">Choose from multiple routes and destinations across different cities.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="fa fa-ticket-alt fa-2x"></i>
                    </div>
                    <h5 class="mb-3">E-Ticket</h5>
                    <p class="mb-0">Get your ticket instantly via email or SMS after booking. No need to print.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="fa fa-headset fa-2x"></i>
                    </div>
                    <h5 class="mb-3">24/7 Support</h5>
                    <p class="mb-0">Our team is available around the clock to help with bookings and inquiries.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="fa fa-credit-card fa-2x"></i>
                    </div>
                    <h5 class="mb-3">Secure Payments</h5>
                    <p class="mb-0">Pay safely online using multiple payment options with full data protection.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services End -->
<!-- Bus Categories Start -->
<div class="container-fluid categories pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Bus <span class="text-primary">Categories</span></h1>
            <p class="mb-0">
                Choose the perfect bus for your journey — whether you prefer luxury, comfort, or economy,
                we have the right option for you.
            </p>
        </div>
        <div class="categories-carousel owl-carousel wow fadeInUp" data-wow-delay="0.1s">

            @{
                foreach(var bus in Model)
                {
                    <!-- Bus -->
                    <div class="categories-item p-4">
                        <div class="categories-item-inner shadow rounded">
                            <div class="categories-img rounded-top">
                                <img src="~/images/@bus.BusImage" class="img-fluid w-100 rounded-top" alt="Bus">
                            </div>
                            <div class="categories-content rounded-bottom p-4 bg-white">
                                <h4 class="mb-3">@bus.BusName</h4>
                                <div class="categories-review mb-3">
                                    <span class="me-2">⭐ 4.9</span>
                                </div>
                                <h5 class="bg-light text-primary rounded-pill py-2 px-4 mb-3">
                                    PKR @(bus?.PricePerSeat ?? 0) / Seat
                                    <br />
                                    <small class="text-muted">Route Fare: PKR @(bus?.price?.FinalFare ?? 0)</small>
                                    <br />
                                    <span class="fw-bold text-success">
                                        Total: PKR @((bus?.PricePerSeat ?? 0) + (bus?.price?.FinalFare ?? 0))
                                    </span>
                                </h5>


                                <div class="row gy-2 gx-0 text-center mb-4">
                                    <div class="col-4 border-end">
                                        <i class="fa fa-users text-dark"></i> <span class="text-body ms-1">@bus.TotalSeats</span>
                                    </div>
                                    <div class="col-4 border-end">
                                        <i class="fa fa-ban text-dark"></i> <span class="text-body ms-1">@bus.BusType</span>
                                    </div>
                                    <div class="col-4">
                                        <i class="fa fa-chair text-dark"></i> <span class="text-body ms-1">@bus.TotalSeats</span>
                                    </div>
                                </div>
                                @if (User.IsInRole("user"))
                                {
                                    <a asp-controller="Home"
                                       asp-action="BookTicket"
                                       asp-route-busId="@bus.BusId"
                                       class="btn btn-primary rounded-pill w-100 py-3">
                                        Book Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
                    
                }
        </div>
    </div>
</div>
<!-- Bus Categories End -->
<!-- Reservation Process Start -->
<div class="container-fluid steps py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize text-white mb-3">Reservation <span class="text-primary">Process</span></h1>
            <p class="mb-0 text-white">
                Our streamlined booking process ensures a convenient experience for passengers, from account creation to confirmed reservations, with transparent payment and instant notifications.
            </p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <div class="steps-item p-4 mb-4">
                    <h4>Create Account / Login</h4>
                    <p class="mb-0">
                        Passengers first create an account or log in to access the booking system, ensuring secure and personalized reservations.
                    </p>
                    <div class="setps-number">01.</div>
                </div>
            </div>
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="steps-item p-4 mb-4">
                    <h4>Select Bus & Seats</h4>
                    <p class="mb-0">
                        Browse available buses, routes, and timings, then choose preferred seats according to real-time availability.
                    </p>
                    <div class="setps-number">02.</div>
                </div>
            </div>
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.5s">
                <div class="steps-item p-4 mb-4">
                    <h4>Confirm & Travel</h4>
                    <p class="mb-0">
                        Make secure payment, receive booking confirmation, and enjoy a hassle-free travel experience with digital tickets.
                    </p>
                    <div class="setps-number">03.</div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Reservation Process End -->
